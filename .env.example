# ===================================
# iFast Broker - Environment Variables
# ===================================

# Database
DATABASE_URL=postgresql://user:password@host:5432/database

# Session Secret (generate a random string)
SESSION_SECRET=your-secret-key-here-change-this

# Replit Authentication (automatically configured in Replit environment)
# These are typically auto-populated when running on Replit
REPLIT_DOMAINS=your-replit-domain.replit.dev
REPL_ID=your-repl-id
ISSUER_URL=https://replit.com/oidc

# ===================================
# CRITICAL: OpenRouter API Configuration
# ===================================
# Get your API key from: https://openrouter.ai/keys
# Sign up at: https://openrouter.ai/
OPENROUTER_API_KEY=sk-or-v1-YOUR_KEY_HERE

# Jason AI Configuration
JASON_USER_ID=   # Will be auto-populated by migration
AI_AUTO_RESPOND_ENABLED=true
AI_COMPLETE_RESPONSES=true
AI_RESPONSE_TIMEOUT=30000

# AI Rate Limiting
AI_RATE_LIMIT_PER_MINUTE=10
AI_RATE_LIMIT_PER_HOUR=100
AI_RATE_LIMIT_PER_DAY=500

# ===================================
# Optional: Other Services
# ===================================
MAILJET_API_KEY=
MAILJET_SECRET_KEY=
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=

# ===================================
# Development Settings
# ===================================
NODE_ENV=development
PORT=5000
